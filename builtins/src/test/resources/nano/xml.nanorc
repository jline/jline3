## ---------------------------------------------------------------------------
## XML syntax
## ---------------------------------------------------------------------------

syntax "XML" "\.([jrsx]html?|xml|sgml?|rng|vue|mei|musicxml)$"
header "<\?xml.*version=.*\?>"
magic "(XML|SGML) (sub)?document"
comment "<!--|-->"

color white "^.+$"
# Attributes
color green  start="<" end=">"
color brightgreen "=\"[^\"]*\""
# Opening tags
color brightcyan   "<[^/][^> ]*"
color brightcyan   ">"
# Closing tags
color cyan "</[^> ]*>"
# Self-closing part
color cyan "/>"
color yellow start="<!DOCTYPE" end="[/]?>"
color yellow start="<!--" end="-->"
color brightwhite,yellow "\<(FIXME|TODO|XXX)\>"
color red    "&[^;]*;"

## Trailing spaces
color ,green "[[:space:]]+$"